    display:hasCustomView   mydomain:organizationBrowseView .
            vivo:Center
    display:hasCustomView   mydomain:organizationBrowseView .
                vivo:University
    display:hasCustomView   mydomain:organizationBrowseView .
                    vivo:Company
    display:hasCustomView   mydomain:organizationBrowseView .
